---
import Image from "astro/components/Image.astro";
import image1 from "../assets/gallery/image1.jpg";
import image2 from "../assets/gallery/image2.jpg";
import image3 from "../assets/gallery/image3.jpg";
import image4 from "../assets/gallery/image4.jpg";
import carpas from "../assets/gallery/carpas.jpg";
import imagen4 from "../assets/gallery/imagen4.jpg";
import retaportal2 from "../assets/gallery/retaportal2.jpg";

---

<section id="galeria">
  
    <Image src={image1} alt="Reta" class="image"/>
  
    <Image src={image2} alt="Reta" class="image" />

    <Image src={retaportal2} alt="Reta" class="image"/>
  
    <Image src={image3} alt="Reta" class="image"/>
   
    <Image src={image4} alt="Reta" class="image"/>
    
    
  
</section>


<style>
section{
  display: flex;
  height: 70vh;
  align-items: center;
  align-content: center;
  flex-direction: row;
  margin-top: 4vh;
} 

.image{
  width: 0vw;
  flex-grow: 1;
  object-fit: cover;
  opacity: .7;
  transition: .5s ease;
  
  width: 8vw;
  height: 60vh;
  border-radius: 8px;
}

.image:hover{
  cursor: crosshair;
  width: 30vw;
  opacity: 1;
  
}

@media (max-width: 430px) {
    .image:hover{
      cursor: crosshair;
      width: 100%;
      opacity: 1;
      
    }

  .image{
   width: 10vw;
  height: 50vh;
  border-radius: 8px;
}
  }

</style>

